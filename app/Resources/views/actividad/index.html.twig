{% extends 'base.html.twig' %}

{% block body %}
    <h1>Actividads list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Finicio</th>
                <th>Ffin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actividad in actividads %}
            <tr>
                <td><a href="{{ path('actividad_show', { 'id': actividad.id }) }}">{{ actividad.id }}</a></td>
                <td>{{ actividad.nombre }}</td>
                <td>{{ actividad.descripcion }}</td>
                <td>{% if actividad.finicio %}{{ actividad.finicio|date('Y-m-d') }}{% endif %}</td>
                <td>{% if actividad.ffin %}{{ actividad.ffin|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('actividad_show', { 'id': actividad.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('actividad_edit', { 'id': actividad.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actividad_new') }}">Create a new actividad</a>
        </li>
    </ul>
{% endblock %}
